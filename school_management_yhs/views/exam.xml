<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="school_exam_form_view" model="ir.ui.view">
            <field name="name">school.exam.form.view</field>
            <field name="model">school.exam</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field
                            name="state"
                            widget="statusbar"
                            statusbar_visible="draft,confirm,in_progress,done,result"
                        />
                        <button name="generate_exam_students" type="object" string="Generate Exam Students" class="btn-primary" invisible="state!='draft'"/>
                        <button name="action_confirm" string="Confirm" type="object" class="oe_highlight" invisible="state!='draft'"/>
                        <button name="action_start_exam" string="Start Exam" type="object" class="oe_highlight" invisible="state!='confirm'"/>
                        <button name="action_end_exam" string="End Exam" type="object"  class="oe_highlight" invisible="state!='in_progress'"/>
                        <button name="action_publish_result" string="Publish Result" type="object" class="oe_highlight" invisible="state!='done'"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" placeholder="Mid/Final Exam etc." readonly="state!='draft'"/>
                                <field name="code"/>
                                <field name="start_date" readonly="state!='draft'"/>
                                <field name="end_date" readonly="state!='draft'"/>
                                
                            </group>
                            <group>
                                <field name="major_id" readonly="state!='draft'"/>
                                <field name="edu_level" readonly="1"/>
                                <field name="years" readonly="state!='draft'" invisible="edu_level == 'high_school'" required="edu_level != 'high_school'"/>
                                <field name="grades" readonly="state!='draft'" invisible="edu_level != 'high_school'" required="edu_level == 'high_school'"/>
                                <!-- <field name="domain_subject_ids" invisible="1"/> -->
                                <field name="subject_ids" widget="many2many_tags"/>
                                <field name="class_ids" domain="[('major_id','=',major_id),('years','=',years)]" widget="many2many_tags" readonly="state!='draft'"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="student_info" string="Student Information">
                                <field name="student_exam_ids"  mode="list" readonly="1">
                                    <list>
                                        <field name="student_id" readonly="1"/>
                                        <field name="name" readonly="1"/>
                                        <field name="stu_id" readonly="1"/>
                                        <field name="total_marks" readonly="1"/>
                                        <field name="rating" readonly="1"/>
                                        <!-- <field name="grade"/> -->
                                        <button name="view_detail_stu_exam" icon='fa-list' type="object" readonly="0" invisible="parent.state not in ['done','result']"/>
                                    </list>
                                </field>
                            </page>

                            <page name="time_table" string="Exam Timetable">
                                <field name="exam_timetable_ids" mode="list" readonly="state!='draft'">
                                    <list editable="bottom">
                                        <field name="domain_subject_ids" column_invisible="1"/>
                                        <field name="subject_id" domain="[('id','in',domain_subject_ids)]"/>
                                        <field name="exam_date"/>
                                        <field name="start_time"/>
                                        <field name="end_time"/>
                                        <field name="total_marks"/>
                                        <field name="class_id"/>
                                        <field name="class_code"/>
                                    </list>
                                </field>

                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
                            
        </record>


        <record id="school_exam_tree_view" model="ir.ui.view">
            <field name="name">school.exam.tree.view</field>
            <field name="model">school.exam</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="major_id"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                </list>
            </field>

        </record>

        <record id="school_exam_action" model="ir.actions.act_window">
            <field name="name">Exam</field>
            <field name="res_model">school.exam</field>
            <field name="view_mode">list,form</field>
        </record>

        

    

</odoo>
