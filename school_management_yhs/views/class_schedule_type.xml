<?xml version="1.0" encoding="utf-8"?>
<odoo>

    
    <record id="class_schedule_type_form" model="ir.ui.view">
        <field name="name">class.schedule.type.form</field>
        <field name="model">class.schedule.type</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="status" widget="statusbar" statusbar_visible="draft,confirm"/>
                    <button name="action_confirm" type="object" string="Confirm" class="oe_highlight" invisible="status == 'confirm'"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="subject_hours" widget="float_time"/>
                            <field name="hours_per_day" widget="float_time"/>
                            <field name="subject_per_day"/>
                
                        </group>
                        <group>
                            <field name="check_in_time" widget="float_time"/>
                            <field name="lunch_start_time" widget="float_time"/>
                            <field name="lunch_end_time" widget="float_time"/>
                            <field name="lunch_duration" widget="float_time"/>
                        </group>
                    </group>
                    <label for="note" string="Note"/>
                    <field name="note"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="class_schedule_type_tree" model="ir.ui.view">
        <field name="name">class.schedule.type.tree</field>
        <field name="model">class.schedule.type</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="subject_hours" widget="float_time"/>
                <field name="hours_per_day" widget="float_time"/>
                <field name="subject_per_day" optional="hide"/>
                <field name="check_in_time" widget="float_time"/>
                <field name="lunch_start_time" optional="hide" widget="float_time"/>
                <field name="lunch_end_time" optional="hide" widget="float_time"/>
                <field name="lunch_duration" optional="hide" widget="float_time"/>
                <field name="status"/>
            </list>
        </field>

    </record>

    <record id="class_schedule_type_action" model="ir.actions.act_window">
        <field name="name">Schedule Type</field>
        <field name="res_model">class.schedule.type</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
