<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="class_schedule_list" model="ir.ui.view">
        <field name="name">class.schedule.list</field>
        <field name="model">school.class.schedule</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="class_id"/>
                <field name="day_of_week"/>
                <field name="domain_subject_ids" column_invisible="1"/>
                <field name="domain_teacher_ids" column_invisible="1"/>
                <field name="subject_id" domain="[('id', 'in', domain_subject_ids)]"/>
                <field name="teacher_id" domain="[('id', 'in', domain_teacher_ids)]"/>
                <field name="start_time" widget="float_time"/>
                <field name="end_time" widget="float_time"/>
            </list>
        </field>
    </record>

    <record id="class_schedule_action" model="ir.actions.act_window">
        <field name="name">Class Schedules</field>
        <field name="res_model">school.class.schedule</field>
        <field name="view_mode">list</field>
    </record>

</odoo>
