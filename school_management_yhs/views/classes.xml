<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="classes_form_view" model="ir.ui.view">
        <field name="name">classes.form.view</field>
        <field name="model">school.classes</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="has_child_class" invisible="1"/>
                    <button
                        name="generate_child_classes"
                        type="object"
                        string="Generate Child Classes"
                        class="btn-primary"
                        invisible="(parent_id or is_active or has_child_class)"
                    />

                    <button name="active_class" type="object" string="Activate Class" class="btn-success" 
                        invisible="(is_active)"/>
                    <button name="deactivate_class" type="object" string="Deactivate Class" class="btn-warning" 
                        invisible="(not is_active)" />

                    <button name="transfer_students_tonext_year" type="object" string="Transfer Students to Next Year" class="btn-info"
                        invisible="not is_active or parent_id"/>
                    
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" readonly="is_active"/>
                            <field name="code"/>
                            <field name="start_date" readonly="is_active"/>
                        </group>
                        <group>
                            <field name="major_id" readonly="is_active"/>
                            <field name="edu_level" readonly="1"/>
                            <field name="years" readonly="is_active" invisible="edu_level == 'high_school'" required="edu_level != 'high_school'"/>
                            <field name="grades" readonly="is_active" invisible="edu_level != 'high_school'" required="edu_level == 'high_school'"/>
                            <field name="subject_ids" widget="many2many_tags"/>
                            <field name="is_active" widget="boolean_toggle" readonly="1"/>
                        </group>

                    </group>
                    
                    <notebook>
                        <page string="Students">
                            <field name="student_ids" mode="list"  readonly="1">
                                <list>
                                    <field name="stu_id"/>
                                    <field name="name"/>
                                    <field name="age"/>
                                    <field name="nrc"/>
                                    <field name="email"/>
                                    <field name="phone"/>
                                </list>
                            </field>
    
                        </page>
                        <page string="Teachers">
                            <field name="teacher_ids" mode="list" readonly="1">
                                <list>
                                    <field name="name"/>
                                    <field name="age"/>
                                    <field name="nrc"/>
                                    <field name="email"/>
                                    <field name="phone"/>
                                </list>
                                
                            </field>
                        </page>
                        <page string="Class Schedule">
                            <field name="class_schedule_ids" mode="list">
                                <list editable="bottom">
                                    <field name="day_of_week"/>
                                    <field name="subject_id"/>
                                    <field name="teacher_id"/>
                                    <field name="start_time"/>
                                    <field name="end_time"/>
                                </list>
                            </field>
                        </page> 
                    </notebook>
                    
                    <div>
                        <field name="description" placeholder="Description about Class"/>
                    </div>
                </sheet>
                <!-- <div class="o_attachment_preview" /> -->
                    <!-- Chatter -->
                <chatter reload_on_attachment="True"/>
            </form>
        </field>
    </record>
    <record id="classes_list_view" model="ir.ui.view">
        <field name="name">classes.list.view</field>
        <field name="model">school.classes</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="code"/>
                <field name="years"/>
                <field name="subject_ids" />
            </list>
        </field>
    </record>

    <record id="classes_view_action" model="ir.actions.act_window">
        <field name="name">Class</field>
        <field name="res_model">school.classes</field>
        <field name="view_mode">list,form</field>
    </record>

    
    

</odoo>
