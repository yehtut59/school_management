<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <template id="class_information_report">
            <t t-name="school_management_yhs.class_information_report">

                <t t-call="web.basic_layout">
                    <div>
                        <div class="row">
                            <div class="col-4">
                                <img t-att-src="image_data_uri(docs.company_id.logo)" style="max-height: 120px; max-width: 300px;"/>
                            </div>
                            <div class="col-8 text-end">
                                <t t-set="current_date" t-value="datetime.datetime.today()"/>
                                <h2><span t-esc="current_date.strftime('%d-%m-%Y')"/></h2>
                            </div>
                        </div>
                        
                    </div>

                    <t t-foreach="docs" t-as="o">
                        <div class="p-3 row border-bottom">
                            <div class="col-6">
                                <h4><b>Class Name: </b> <span t-field="o.name"/></h4>
                            </div>
                            <div class="col-6 text-center">
                                <h4><b>Class Code: </b> <span t-field="o.code"/></h4>
                            </div>
                        </div>
                        <div class="p-3 row border-bottom">
                            <div class="col-6">
                                <h4><b>Year: </b> <span t-field="o.years"/></h4>
                            </div>
                            <div class="col-6 text-end">
                                
                            </div>
                        </div>
                        <div class="p-3">
                            <h4><b>Subjects:</b></h4>
                            <t t-set="subject_list" t-value="' '"/>
                            <t t-foreach="o.subject_ids" t-as="subject">
                                <t t-set="subject_list" t-value="subject_list + subject.name + ', '"/>
                            </t>
                            <b><span t-esc="subject_list"/></b>
                            <hr/>
                        </div>
                        

                        <h3 class="border-bottom mt-3">Students</h3>
                        
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Student ID</th>
                                    <th>Student Name</th>
                                    <th>Phone</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="o.student_ids" t-as="student">
                                    <tr>
                                        <td><span t-field="student.stu_id"/></td>
                                        <td><span t-field="student.name"/></td>
                                        <td><span t-field="student.phone"/></td>
                                        
                                    </tr>
                                </t>
                            </tbody>
                        
                        </table>
                        <hr/>
                        
                        <h3 class="border-bottom">Teachers</h3>
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    
                                    <th>Teacher Name</th>
                                    <th>Email</th>
                                    <th>Phone</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="o.teacher_ids" t-as="teacher">
                                    <tr>    
                                       
                                        <td><span t-field="teacher.name"/></td>
                                        <td><span t-field="teacher.email"/></td>
                                        <td><span t-field="teacher.phone"/></td>
                                    </tr>   
                                </t>
                            </tbody>
                        </table>
                    </t>

                </t> 
            </t>
           
        </template>


        
    
    </data>

    <record id="class_information_report_action" model="ir.actions.report">
        <field name="name">Class Information</field>
        <field name="model">school.classes</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">school_management_yhs.class_information_report</field>
        <field name="report_file">school_management_yhs.class_information_report</field>
        <field name="print_report_name">'Class Information'</field>
        <field name="binding_model_id" ref="model_school_classes"/>
        <field name="binding_type">report</field>
    </record>
    

</odoo>
