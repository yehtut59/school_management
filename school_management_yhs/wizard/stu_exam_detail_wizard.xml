<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="stu_exam_detail_wizard" model="ir.ui.view">
        <field name="name">stu.exam.detail.wizard</field>
        <field name="model">school.student.exam</field>
        <field name="arch" type="xml">
            <form class="modal-xl">
                <div string="Student Exam Details">
                    <field name="status" invisible="1"/>
                    <field name="stu_exam_detail_ids" mode="list" readonly="status!='done'">
                        <list editable="bottom">
                            <field name="student_id"/>
                            <field name="exam_id"/>
                            <field name="domain_subject_ids" column_invisible="1"/>
                            <field name="subject_id" domain="[('id','in',domain_subject_ids)]"/>
                            <field name="marks_obtained"/>
                            <field name="grade"/>
                            <field name="is_passed"/>
                        </list>
                    </field>
                </div>
            </form>
        </field>

    </record>
    
    <record id="stu_exam_detail_wizard_action" model="ir.actions.act_window">
        <field name="name">Student Exam Detail</field>
        <field name="res_model">school.student.exam</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="stu_exam_detail_wizard"/>
    </record>

</odoo>
