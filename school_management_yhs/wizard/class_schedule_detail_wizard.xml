<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="class_schedule_details_wizard" model="ir.ui.view">
        <field name="name">class.schedule.details.wizard</field>
        <field name="model">school.class.schedule</field>
        <field name="arch" type="xml">
            <form>
                <div string="Schedule Detail">
                    <field name="schedule_mode" invisible="1"/>
                    <field name="schedule_detail_ids" mode="list" readonly="schedule_mode == 'fixed'">
                        <list string="Schedule Details" editable="bottom">
                            <field name="domain_subject_ids" column_invisible="1"/>
                            <field name="domain_teacher_ids" column_invisible="1"/>
                            <field name="schedule_mode" optional="hide"/>
                            <field name="subject_id" domain="[('id','in',domain_subject_ids)]" readonly="schedule_mode == 'fixed'"/>
                            <field name="teacher_id" domain="[('id','in',domain_teacher_ids)]" readonly="schedule_mode == 'fixed'"/>
                            <field name="day_of_week" optional="hide" />
                            <field name="start_time" readonly="schedule_mode == 'fixed'"/>
                            <field name="end_time" readonly="schedule_mode == 'fixed'"/>
                        </list>
                    </field>
                </div>
            </form>
        </field>
    </record>

    <record id="class_schedule_detail_wizard_action" model="ir.actions.act_window">
        <field name="name">Schedule Detail</field>
        <field name="res_model">class.schedule.detail</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="class_schedule_details_wizard"/>
    </record>

</odoo>
